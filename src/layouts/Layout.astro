---
import '../styles/StylesGlobal.css'
import Footers from '../layouts/footer.astro'


interface Props {
	title: string;
}

const { title } = Astro.props;

---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
        <meta name="title" content="Todoklick">
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="https://i.ibb.co/99pMrXz/Logo-Todo-Klick-2048x2048-4096x4096-copia.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header class="header">
			<nav class="header__nav">
				<div class="nav__left">
                    <a href="/">
					    <img src="https://i.ibb.co/99pMrXz/Logo-Todo-Klick-2048x2048-4096x4096-copia.png" alt="icono todoclick" class="nav__icon">
                    </a>
					<h2 class="nav__title">Todoklick</h2>
				</div>
				<form class="nav__center">
					<input type="text" class="nav__search" placeholder="Buscar...">
					<svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor"  viewBox="0 0 16 16" id="search-toggle" class="nav__search-icon">
						<path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
					</svg>
					<button class="nav__search-b">
						<svg xmlns="http://www.w3.org/2000/svg" width="25" height="27" fill="currentColor"  viewBox="0 0 16 16" id="search-toggle" >
							<path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
						</svg> 
					</button>
				</form>
				<div class="nav__right">
					<svg xmlns="http://www.w3.org/2000/svg" width="45" height="45" fill="currentColor"  viewBox="0 0 16 16" id="nav-toggle" class="nav__toggle">
						<path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5"/>
					</svg>
				</div>
				<ul class="nav__list" id="nav-list">
					<li class="nav__item"><a href="Index.html">Inicio</a></li>
					<li class="nav__item"><a href="#">Servicios</a></li>
					<li class="nav__item"><a href="#">Contacto</a></li>
					<li class="nav__item"><a href="#">Ofertas</a></li>
					<li class="nav__item"><a href="#">Publicas</a></li>
				</ul>
				<div class="nav__overlay" id="nav-overlay"></div>
			</nav>
		</header>
		<slot />
	</body>
    <Footers/>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const navToggle = document.getElementById("nav-toggle");
            const navList = document.getElementById("nav-list");
            const navOverlay = document.getElementById("nav-overlay");
            const searchToggle = document.getElementById("search-toggle");
            const navSearch = document.querySelector(".nav__search");

            function isSmallScreen() {
                return window.innerWidth <= 850;
            }

            function toggleNav() {
                if (isSmallScreen()) {
                    navList.classList.toggle("active");
                    navOverlay.classList.toggle("active");
                    // Ocultar la barra de búsqueda al mostrar el menú desplegable
                    navSearch.classList.remove("active");
                } else {
                    navList.classList.remove("active");
                    navOverlay.classList.remove("active");
                }
            }

            function toggleSearch() {
                if (isSmallScreen()) {
                    navSearch.classList.toggle("active");
                }
            }

            navToggle.addEventListener("click", function() {
                toggleNav();
            });

            navOverlay.addEventListener("click", function() {
                toggleNav();
            });

            searchToggle.addEventListener("click", function() {
                toggleSearch();
            });

            const carouselItems = document.querySelectorAll(".carousel__item");
            const prevBtn = document.querySelector(".carousel__btn--prev");
            const nextBtn = document.querySelector(".carousel__btn--next");
            let currentIndex = 0;

            function showCarouselItem(index) {
                carouselItems.forEach((item, i) => {
                    item.classList.toggle("active", i === index);
                });
            }

            prevBtn.addEventListener("click", function() {
                currentIndex = (currentIndex - 1 + carouselItems.length) % carouselItems.length;
                showCarouselItem(currentIndex);
            });

            nextBtn.addEventListener("click", function() {
                currentIndex = (currentIndex + 1) % carouselItems.length;
                showCarouselItem(currentIndex);
            });

            showCarouselItem(currentIndex);

        });
	</script>
</html>
<style>


:root{
    --color-principal:#235;
    --color-secundario: #49b;

}
.header{
	margin-bottom:60px ;
}

.header__nav {
    width: 100%;
    height: 60px;
    background-image: linear-gradient(135deg,var(--color-principal), var(--color-secundario));
    box-sizing: border-box;
    position: fixed;
    top: 0;
    left: 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 20px;
    z-index: 2000;
}

.nav__left,
.nav__center,
.nav__right {
    display: flex;
    align-items: center;
}

.nav__left {
    flex: 1;
    justify-content: flex-start;
}


.nav__center {
    flex: 1;
    justify-content: center;
    position: relative;
}

.nav__right {
    flex: 1;
    justify-content: flex-end;
    position: relative;
}

.nav__search-icon {
    width: 40px;
    height: 40px;
    cursor: pointer;
    display: none;
    z-index: 1900;
}

.nav__toggle {
    width: 60px;
    height: 40px;
    cursor: pointer;
    display: none;
}

.nav__icon {
    width: 40px;
    height: 40px;
    margin-right: 10px;
    transition-property: transform;
    transition-duration: 0.2s;
}

.nav__icon:hover{
    transform: scale(1.1);
}


.nav__title {
    margin: 0;
    padding: 0 15px 0 0;
    font-size: 24px;
    color: white;
    cursor:default;
}

.nav__search {
    width: 240px;
    padding: 8px 10px;
    border: none;
    font-size: 16px;
    color: black;
    background-color: #fff;
    position: relative;
    border-radius: 5px 0 0 5px;
    z-index: 2000;
    outline: none;
    transition-property: outline;
    transition-duration: .2s ;
}

.nav__search-b{
    border: none;
    background-color: var(--color-secundario);
    width: 40px;
    height: 34px;
    border-radius: 0 5px 5px 0 ;
}

.nav__search-b > svg{
    fill: white;
}



.nav__search-btn {
    background: none;
    border: none;
    cursor: pointer;
}

.nav__search-btn img {
    width: 50px;
    height: 50px;
}

.nav__list {
    display: flex;
    list-style: none;
    padding: 0;
    margin: 0;
    gap: 0px;
}

.nav__item {
    padding: 0 5px;
    text-align: center;
}

.nav__item a {
    color: white;
    text-decoration: none;
    display: block;
    font-size: 12px;
}


.nav__overlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 1998;
    opacity: 0;
    transition: opacity 0.3s;
}

.nav__overlay.active {
    display: block;
    opacity: 1;
}

/* Mostrar elementos del menú desplegable */
.nav__list.active {
    display: flex;
    max-height: 100vh;
    padding: 20px 0;
    background-color: #2C3B59;
    flex-direction: column;
    align-items: center;
    justify-content: top;
    gap: 0px;
}

.nav__item a {
    color: white;
    text-decoration: none;
    display: block;
    font-size: 12px;
    padding: 10px 5px;
}

@media (max-width: 850px) {
    .nav__toggle,
    .nav__search-icon {
        display: block;
    }

    .nav__list {
        display: none;
        position: fixed;
        top: 60px;
        right: 0;
        width: 100%;
        max-height: 0;
        background-color: #2C3B59;
        list-style: none;
        padding: 0;
        margin: 0;
        z-index: 1999;
        flex-direction: column;
        align-items: flex-start;
        justify-content: flex-start;
        gap: 10px;
        transition: max-height 0.3s ease, padding 0.3s ease;
    }

    .nav__list.active {
        display: flex;
        max-height: 100vh;
        padding: 20px 0;
    }

    .nav__search {
        display: none;
        width: calc(100% - 60px);
        position: absolute;
        top: 0;
        left: 10px;
        margin: 0 auto;
        padding-left: 10px;
        padding-right: 50px;
        max-width: 80%;
    }

    .nav__search.active {
        display: block;
        width: calc(100% - 60px);
    }

    .nav__center {
        flex-direction: column;
        align-items: flex-start;
        width: 100%;
        position: relative;
    }
	.nav__search-b{
        display:none
    }
}
</style>
